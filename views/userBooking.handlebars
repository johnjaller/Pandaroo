{{! Restaurant header }}
<div class="container">
  <div class="row d-flex align-items-center">
    <div class="col-6">
      <h2 class="userBooking-restName mx-5 my-3">Hello World restaurant</h2>
    </div>
    <div class="col-4 userBooking-star">
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
    </div>
    <div class="col-2 userBooking-bookmark">
      <button type="button" class="border-0 bg-white"><i
          class="far fa-bookmark fa-2x"
        ></i></button>
    </div>
  </div>
</div>

{{! Restaurant form }}
<div class="container">
  <div class="row">
    <div class="col-4">

      <div class="userBookingForm card" style="width: 26.7rem;">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <p class="book">Book</p>
            </div>
            <div class="userBookingForm-order">
              <a href="#" class="text-decoration-none"><p class="order">Order ></p></a>
            </div>
          </div>
          <div class="bg-white">
            <h4 class="pt-3 ms-3 userBookingForm-restName">Hello World
              restaurant</h4>
            <hr class="my-3 mx-auto userBookingForm-hr" />
            <p class="ms-4">Address:<br />ABC building</p>
            <p class="ms-4">Tel:<br />1234 5678</p>
            <p class="ms-4">Business hour:<br />12:00 - 22:00</p>
            <hr class="my-3 mx-auto userBookingForm-hr" />
            <br />
          </div>

          <form id="userBookingForm" action="/" method="POST">
            <div class="d-flex">
              <div class="mt-3 me-2">Date<br /><input
                  type="date"
                  id=""
                  name="bookingDate"
                  style="width: 190px;"
                /></div>
              <div class="mt-3">Time<br /><input
                  type="time"
                  id=""
                  name="bookingTime"
                  style="width: 190px;"
                /></div>
            </div>
            <div class="mt-3">No of guests<br /><input
                type="number"
                id=""
                name=""
                min="1"
              /></div>
            <div class="mt-3">Special request<br /><textarea
                id=""
                name=""
                rows="3"
                cols="41"
              ></textarea>
            </div>
            <a href="#"><button
                type="submit"
                class="mt-3 float-end border-0 rounded btn-userSubmit"
              >Submit ></button></a>
          </form>

        </div>
      </div>
    </div>

    <div class="user-restMenu col-8">
      <h4>Menu</h4>
      <table class="table table-bordered">
        <thead>
          <tr class="text-center">
            <th><a href="#" class="text-decoration-none">Soup n Salad</a></th>
            <th><a href="#" class="text-decoration-none">Starter</a></th>
            <th><a href="#" class="text-decoration-none">Main</a></th>
            <th><a href="#" class="text-decoration-none">Dessert</a></th>
            <th><a href="#" class="text-decoration-none">Drinks</a></th>
            <th><a href="#" class="text-decoration-none">Others</a></th>
          </tr>
        </thead>
      </table>

      <div class="d-flex flex-wrap justify-content-start">
        {{! each dishes }}
        <div class="card me-1 user-dishes" style="width: 13rem;">
          <img
            src="/assets/panna-cotta.png"
            class="card-img-top mx-auto"
            alt="dishes pic"
          />
          <div class="card-body">
            <p class="card-text">Apple pie</p>
            <p class="card-text">HKD 12.50</p>
          </div>
        </div>
        {{! /each dishes }}
      </div>
    </div>

  </div>
</div>

<br />
