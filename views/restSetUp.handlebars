<section class="container">
  <div class="container d-flex justify-content-center row">
    {{! Upload restaurant profile pic }}
    <div class="col-8 pb-3">
      <form class="restPropicForm" action="/bizsetuppropic" method="POST" enctype="multipart/form-data">
        <h2 class="restSignUpTitle">Sign Up</h2>
        <img id="photo" src="#" alt="" />
        <br />
        <label for="formFile" class="form-label">
          Please choose your restaurant profile picture
        </label>
        <input class="form-control" type="file" name="uploadedFile" id="formFile" onchange="readURL(this);"/>
        <button class="mt-2 border-0 rounded btn-restGo" type="submit" name="submit">Set ></button>
      </form>
    </div>
  </div>

<form class="restSignUpForm" action="/bizsetup" method="PUT"></form>
{{#each restInfo}}
  <div class="container d-flex justify-content-center">
    {{! Restaurant information }}
    <div class="col-4 mt-4 pb-3">
      <h4 class="restSignUpTitle">Information</h4>
      {{! Restaurant name }}
      <div class="mb-2">
        <label for="restName" class="form-label">Restaurant name</label>
        <input type="text" value="{{this.name}}" class="form-control" id="restName" name="restName" required />
        <div class="v-msg"></div>
      </div>
      
      {{! Restaurant phone and district }}
      <div class="d-flex">
        <div class="mb-2 me-1">
          <label for="restPhone" class="form-label">Phone</label>
          <input type="tel" value="{{this.phone_no}}" class="form-control" id="restPhone" name="restPhone" required />
          <div class="v-msg"></div>
        </div>
        <div class="mb-2">
          <label for="restDistrict" class="form-label">District</label>
          <select class="form-select" id="restDistrict" name="restDistrict" required />
              <option selected>{{this.district}}</option>
              <option value="1">Central and Western</option>
              <option value="2">Eastern</option>
              <option value="3">Southern</option>
              <option value="4">Wai Chai</option>
              <option value="5">Kowloon City</option>
              <option value="6">Kwun Tong</option>
              <option value="7">Sham Shui Po</option>
              <option value="8">Wong Tai Sin</option>
              <option value="9">Yau Tsim Mong</option>
              <option value="10">Tsuen Wan</option>
              <option value="11">Kwai Tsing</option>
              <option value="12">Shatin</option>
              <option value="13">North</option>
              <option value="14">Tai Po</option>
              <option value="15">Tuen Mun</option>
              <option value="16">Yuen Long</option>
              <option value="17">Sai Kung</option>
              <option value="18">Islands</option>
          </select>
          <div class="v-msg"></div>
        </div>
      </div>
      {{! Restaurant address }}
      <div class="mb-2 me-1">
        <label for="restAddress" class="form-label">Address</label>
        <input type="text" value="{{this.address}}" class="form-control" id="restAddress" name="restAddress" required />
        <div class="v-msg"></div>
      </div>
      {{! Restaurant opening and closing time }}
      <div class="d-flex">
        <div class="mb-2 me-1">
          <label for="restOpening" class="form-label">Opening time</label>
          <input type="time" value="{{this.opening_time}}" class="form-control" id="restOpening" name="restOpening" style="width: 212px;" required />
          <div class="v-msg"></div>
        </div>
        <div class="mb-2">
          <label for="restClosing" class="form-label">Closing time</label>
          <input type="time" value="{{this.closing_time}}" class="form-control" id="restClosing" name="restClosing" style="width: 212px;" required />
          <div class="v-msg"></div>
        </div>
      </div>
      {{! Restaurant seats and delivery service }}
      <div class="d-flex">
        <div class="mb-2 me-1">
          <label for="restSeat" class="form-label">No of seats</label>
          <input type="number" value="{{this.seats}}" class="form-control" id="restSeat" name="restSeat" min="1" required />
          <div class="v-msg"></div>
        </div>
        <div class="mb-2">
          <label for="restDelivery" class="form-label">Delivery service</label>
          <select class="form-select" id="restDelivery" name="restDelivery" style="width: 212px;" required />
              <option selected>{{this.delivery}}</option>
              <option value="True">Yes</option>
              <option value="False">No</option>
          </select>
          <div class="v-msg"></div>
        </div>
      </div>
      {{! Restaurant discount }}
      <div class="d-flex">
        <div class="mb-2 me-1">
          <label for="restDiscountCode" class="form-label">Discount code</label>
          <input type="text" value="{{this.code}}" class="form-control" id="restDiscountCode">
          <div class="v-msg"></div>
        </div>
        <div class="mb-2">
          <label for="restDiscount" class="form-label">Discount</label>
          <select class="form-select" id="restDiscount" style="width: 212px;">
              <option selected>{{this.discount}}</option>
              <option value="10">10% Off</option>
              <option value="20">20% Off</option>
              <option value="30">30% Off</option>
              <option value="40">40% Off</option>
              <option value="50">50% Off</option>
              <option value="60">60% Off</option>
              <option value="70">70% Off</option>
              <option value="80">80% Off</option>
              <option value="90">90% Off</option>
          </select>
          <div class="v-msg"></div>
        </div>
      </div>
    </div>

      {{! Restaurant introduction }}
      <div class="col-4 ms-3 mt-4">
        <h4 class="restSignUpTitle">About</h4>
        <div class="mb-3">
          <div class="form-floating">
            <textarea
              class="form-control"
              placeholder="Leave a comment here"
              id="floatingTextarea2" 
              name="restAbout"
              style="height: 250px" 
              required
            >{{this.description}}</textarea>
            <div class="v-msg"></div>
            <div class="invalid-feedback">Please enter your restaurant description in the textarea.</div>
            <label for="floatingTextarea2">Brief introduction of your restaurant</label>
          </div>
        </div>
        <div class="mb-3">
          <label for="tags" class="form-label">Tags</label><br />
          <div class="dropdown">
            <button
              class="border-0 rounded btn-restTag dropdown-toggle"
              type="button"
              id="dropdownMenuButton1"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Features of your restaurant
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" id="restTag" name="restTag">
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="hongKongStyle"
                  value="hongKongStyle"
                />
                <label class="form-check-label" for="hongKongStyle">Hong Kong
                  Style</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="chinese"
                  value="chinese"
                />
                <label class="form-check-label" for="chinese">Chinese</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="taiwanese"
                  value="taiwanese"
                />
                <label
                  class="form-check-label"
                  for="taiwanese"
                >Taiwanese</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="japanese"
                  value="japanese"
                />
                <label class="form-check-label" for="japanese">Japanese</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="korean"
                  value="korean"
                />
                <label class="form-check-label" for="korean">Korean</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="western"
                  value="western"
                />
                <label class="form-check-label" for="western">Western</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="petFriendly"
                  value="petFriendly"
                />
                <label
                  class="form-check-label"
                  for="petFriendly"
                >Pet-friendly</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="liveBroadcast"
                  value="liveBroadcast"
                />
                <label class="form-check-label" for="liveBroadcast">Live Sports
                  Broadcast</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="parking"
                  value="parking"
                />
                <label class="form-check-label" for="parking">Parking</label>
              </div>
            </ul>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

  <div class="container pb-5">
    <div class="row">
      <div id="validation-msg"></div>
      <div class="col-12 text-center">
        <button type="submit" value="submit" form="restSignUpForm" class="mt-2 mx-2 border-0 rounded btn-restGo" id="restSetUpSubmit">
          Submit ></button>
        <a href="/biz/bizsetupmenu"><button value="setmenu" class="mt-2 mx-2 border-0 rounded btn-restGo" id="restSetUpSubmit">
          Set Menu > ></button></a>
      </div>
    </div>
  </div>
</form>
</section> 