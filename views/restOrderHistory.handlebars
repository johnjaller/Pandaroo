<div class="container">
  <h2 class="my-4 restBookingTitle">Order History</h2>
  <div class="table-responsive">
    <table
      class="table align-middle table-bordered table-hover text-center restTable"
    >
      <thead>
        <tr class="restBooking">
          <th>Order no.</th>
          <th>Order time</th>
          <th>Dishes</th>
          <th>Total amount</th>
          <th>Special request</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each restOrderHistory}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.created_at}}</td>
            <td>
              {{#each items}}
                {{this.item}}
                x
                {{this.quantity}}
                <br />
              {{/each}}
            </td>
            <td>HKD {{this.total_amount}}</td>
            <td>{{this.special_request}}</td>
            <td>{{this.order_status}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{! Pagination }}
<nav aria-label="Page navigation">
  <ul class="pagination d-flex justify-content-center fixed-bottom mt-3 mb-5">
    {{#if hasLastPage}}
      <li class="page-item">
        <a
          class="page-link"
          href="/biz/ordershistory?page={{lastPage}}"
          aria-label="Previous"
        >
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{else}}
      <li class="page-item disabled">
        <a
          class="page-link"
          href="/biz/ordershistory?page={{lastPage}}"
          aria-label="Previous"
        >
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{/if}}
    {{{createPageNumber type totalPage currentPage}}}
    {{#if hasNextPage}}
      <li class="page-item">
        <a
          class="page-link"
          href="/biz/ordershistory?page={{nextPage}}"
          aria-label="Next"
        >
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{else}}
      <li class="page-item disabled">
        <a
          class="page-link"
          href="/biz/ordershistory?page={{nextPage}}"
          aria-label="Next"
        >
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>

