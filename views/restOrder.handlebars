<div class="container">
  <h2 class="my-4 restBookingTitle">Current Orders</h2>
  <div class="table-responsive">
    <table
      class="table align-middle table-bordered table-hover text-center restTable"
    >
      <thead>
        <tr class="restBooking">
          <th>Order no.</th>
          <th>Order time</th>
          <th>Dishes</th>
          <th>Total amount</th>
          <th>Special request</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each restOrder}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.created_at}}</td>
            <td>
              {{#each items}}
                {{this.item}}
                x
                {{this.quantity}}
                <br />
              {{/each}}
            </td>

            <td>HKD {{this.total_amount}}</td>
            <td>{{this.special_request}}</td>
            <td>
              <select class="form-select mb-2 orderStatus">
                <option>{{this.order_status}}</option>
                <option value="Preparing">Preparing</option>
                <option value="Ready">Ready</option>
                <option value="Delivered">Delivered</option>
                <option value="Cancelled">Cancelled</option>
              </select>
              <button
                type="submit"
                id={{this.id}}
                class="border-0 rounded btn-restSubmitOrder"
              >Submit</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<br />
<br />

{{! Pagination }}
<nav aria-label="Page navigation">
  <ul class="pagination d-flex justify-content-center fixed-bottom mt-3 mb-5">
    {{#if hasLastPage}}
      <li class="page-item">
        <a
          class="page-link"
          href="/biz/orders?page={{lastPage}}"
          aria-label="Previous"
        >
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{else}}
      <li class="page-item disabled">
        <a
          class="page-link"
          href="/biz/orders?page={{lastPage}}"
          aria-label="Previous"
        >
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{/if}}
    {{{createPageNumber type totalPage currentPage}}}
    {{#if hasNextPage}}
      <li class="page-item">
        <a
          class="page-link"
          href="/biz/orders?page={{nextPage}}"
          aria-label="Next"
        >
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{else}}
      <li class="page-item disabled">
        <a
          class="page-link"
          href="/biz/orders?page={{nextPage}}"
          aria-label="Next"
        >
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>

<br />
<br />