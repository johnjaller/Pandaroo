{{! Restaurant header }}
<div class="container">
  <div class="row d-flex align-items-center">
    <div class="col-6">
      <h2 class="userBooking-restName mx-5 my-3">{{restaurant.name}}</h2>
    </div>
    <div class="col-4 userBooking-star">
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
    </div>
    <div class="col-2 userBooking-bookmark">
      <button type="button" class="border-0 bg-white bookmark" id="{{restaurant.id}}"><i
          class="far fa-bookmark fa-2x"></i></button>
    </div>
  </div>
</div>

{{! Restaurant form }}
<div class="container">
  <div class="row">
    <div class="col-4">

      <div class="userBookingForm card" style="width: 26.7rem;">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <p class="book">Order</p>
            </div>
            <div>
              <a href="#" class="text-decoration-none">
                <p class="order">Book ></p>
              </a>
            </div>
          </div>
          <div class="bg-white">
            <h4 class="pt-3 ms-3 userBookingForm-restName">{{restaurant.name}}</h4>
            <hr class="my-3 mx-auto userBookingForm-hr" />

            <form class="userOrder" id="userOrderForm" method="post" action="/checkout">

              <table class="table table-borderless">
                <input type="text" name="order" class="d-none userOrder">
                <input type="text" name="restaurant" class="d-none userRest">
                <input type="text" name="discount" class="d-none discount" id="discount">
                <tbody class="orderList">

                </tbody>
                <tbody class="discountList">

                </tbody>
              </table>

              <hr class="my-3 mx-auto userBookingForm-hr" />
              <div class="d-flex justify-content-between">
                <p class="ms-3">Total:</p>
                <p class="me-3 totalPrice">HKD </p>
              </div>
          </div>

          <div class="mt-3">Special request<br /><textarea id="specialRequest" name="specialRequest" rows="3"
              cols="41"></textarea>
          </div>
          <div class="d-flex">
            <div class="mt-3">Discount Code<br /><input type="text" id="discountCode" name="discountCode"
                style="width: 190px;">
              <a href="#" class="border-0 rounded btn-userCoupon couponCheck">Use coupon</a>
            </div>
          </div>
          <button type="submit" class="mt-3 float-end border-0 checkout rounded btn-userSubmit">Check Out ></button>
          </form>

        </div>
      </div>
    </div>

    <div class="pb-5 user-restMenu col-8">
      {{!-- <h4>Menu</h4> --}}
      <table class="table table-bordered">
        <thead>
          <tr class="text-center">
            <th><a href="/order/{{restaurant.id}}" class="text-decoration-none">Soup n Salad</a></th>
            <th><a href="/order/{{restaurant.id}}/starter" class="text-decoration-none">Starter</a></th>
            <th><a href="/order/{{restaurant.id}}/main" class="text-decoration-none">Main</a></th>
            <th><a href="/order/{{restaurant.id}}/dessert" class="text-decoration-none">Dessert</a></th>
            <th><a href="/order/{{restaurant.id}}/drinks" class="text-decoration-none">Drinks</a></th>
            <th><a href="/order/{{restaurant.id}}/others" class="text-decoration-none">Others</a></th>
          </tr>
        </thead>
      </table>

      <div class="d-flex flex-wrap justify-content-start">
        {{#each dish}}
        <div class="card me-1 mb-1 text-center user-dishes" style="width: 13rem; height: 23rem">
          <img src="/image/{{this.photoPath}}" class="card-img-top mx-auto" alt="dishes pic" />
          <div class="card-body">
            <p class="card-text text-start item-name" id='{{id}}'>{{name}}</p>
          </div>
          <p class="card-text text-start ms-3 item-price">HKD {{price}}</p>
          <button type="submit" class="border-0 rounded btn-userAddToCart addToCart">Add
            to cart</button>
        </div>
        {{/each}}
      </div>

    </div>

  </div>
</div>

