{{! Restaurant header }}
<div class="container">
  <div class="row d-flex align-items-center">
    <div class="col-6">
      <h2 class="userBooking-restName mx-5 my-3">Hello World restaurant</h2>
    </div>
    <div class="col-4 userBooking-star">
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
    </div>
    <div class="col-2 userBooking-bookmark">
      <button type="button" class="border-0 bg-white"><i
          class="far fa-bookmark fa-2x"
        ></i></button>
    </div>
  </div>
</div>

{{! Restaurant form }}
<div class="container">
  <div class="row">
    <div class="col-4">

      <div class="userBookingForm card" style="width: 26.7rem;">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <p class="book">Order</p>
            </div>
            <div>
              <a href="#" class="text-decoration-none"><p class="order">Book ></p></a>
            </div>
          </div>
          <div class="bg-white">
            <h4 class="pt-3 ms-3 userBookingForm-restName">Hello World
              restaurant</h4>
            <hr class="my-3 mx-auto userBookingForm-hr" />

            <table class="table table-borderless">
              <tbody>
                {{! each dishes }}
                <tr class="text-center">
                  <td>Orange juice</td>
                  <td>1</td>
                  <td>HKD 10.00</td>
                </tr>
                {{! /each dishes }}
              </tbody>
            </table>

            <hr class="my-3 mx-auto userBookingForm-hr" />
            <div class="d-flex justify-content-between">
              <p class="ms-3">Total:</p>
              <p class="me-3">HKD {{price}}</p>
            </div>
          </div>

          <form id="userBookingForm" action="/" method="POST">
            <div class="mt-3">Special request<br /><textarea
                id=""
                name=""
                rows="3"
                cols="41"
              ></textarea>
            </div>
            <div class="d-flex">
              <div class="mt-3 me-2">Delivery<br /><input
                  type="time"
                  id=""
                  name="bookingDate"
                  style="width: 190px;"
                /></div>
              <div class="mt-3">Discount Code<br /><input
                  type="text"
                  id=""
                  name="bookingTime"
                  style="width: 190px;"
                /></div>
            </div>
            <a href="#"><button
                type="submit"
                class="mt-3 float-end border-0 rounded btn-userSubmit"
              >Check Out ></button></a>
          </form>

        </div>
      </div>
    </div>

    <div class="user-restMenu col-8">
      <h4>Menu</h4>
      <table class="table table-bordered">
        <thead>
          <tr class="text-center">
            <th><a href="#" class="text-decoration-none">Soup n Salad</a></th>
            <th><a href="#" class="text-decoration-none">Starter</a></th>
            <th><a href="#" class="text-decoration-none">Main</a></th>
            <th><a href="#" class="text-decoration-none">Dessert</a></th>
            <th><a href="#" class="text-decoration-none">Drinks</a></th>
            <th><a href="#" class="text-decoration-none">Others</a></th>
          </tr>
        </thead>
      </table>

      <div class="d-flex flex-wrap justify-content-start">
        {{! each dishes }}
        <div class="card me-1 text-center user-dishes" style="width: 13rem;">
          <img
            src="./panna-cotta.png"
            class="card-img-top mx-auto"
            alt="dishes pic"
          />
          <div class="card-body">
            <p class="card-text text-start">Apple pie</p>
            <p class="card-text text-start">HKD 12.50</p>
            <button type="submit" class="border-0 rounded btn-userAddToCart">Add
              to cart</button>
          </div>
        </div>
        {{! /each dishes }}
      </div>

    </div>

  </div>
</div>

<br />
