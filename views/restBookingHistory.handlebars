<div class="container">
  <h2 class="my-4 restBookingTitle">Booking History</h2>
  <div class="table-responsive">
    <table
      class="table align-middle table-bordered table-hover text-center restTable"
    >
      <thead>
        <tr class="restBooking">
          <th>Booking no.</th>
          <th>First name</th>
          <th>Last name</th>
          <th>No of guest</th>
          <th>Booking date</th>
          <th>Booking time</th>
          <th>Special request</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each restBookingHistory}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.firstname}}</td>
            <td>{{this.surname}}</td>
            <td>{{this.no_of_ppl}}</td>
            <td>{{this.booking_date}}</td>
            <td>{{this.booking_time}}</td>
            <td>{{this.special_request}}</td>
            <td>{{this.booking_status}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{! Pagination }}
<nav aria-label="Page navigation">
  <ul class="pagination d-flex justify-content-center fixed-bottom mt-3 mb-5">
    {{#if hasLastPage}}
      <li class="page-item">
        <a
          class="page-link"
          href="/biz/bookingshistory?page={{lastPage}}"
          aria-label="Previous"
        >
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{else}}
      <li class="page-item disabled">
        <a
          class="page-link"
          href="/biz/bookingshistory?page={{lastPage}}"
          aria-label="Previous"
        >
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{/if}}
    {{{createPageNumber type totalPage currentPage}}}
    {{#if hasNextPage}}
      <li class="page-item">
        <a
          class="page-link"
          href="/biz/bookingshistory?page={{nextPage}}"
          aria-label="Next"
        >
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{else}}
      <li class="page-item disabled">
        <a
          class="page-link"
          href="/biz/bookingshistory?page={{nextPage}}"
          aria-label="Next"
        >
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>

