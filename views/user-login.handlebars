<section
  id="user-page"
  class="d-flex align-items-center justify-content-center"
>
  <div
    id="user-login-signup"
    class="border-0 rounded-2 position-relative container"
  >
    <div id="user-logo">
      <h1 id="user-title" class="text-center">PANDAROO</h1>
    </div>
    <div class="row d-flex align-items-start px-2">
      <div class="col-6 px-3 col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h2>LOGIN</h2><br />
        <div class="pe-4">
          <button class="btn btn-dark mt-3 py-3 w-100">LOG IN VIA GOOGLE</button><br
          />
          <a href="/auth/facebook"><button
              class="btn btn-dark mt-3 py-3 w-100"
            >LOG IN VIA FACEBOOK</button></a><br />
        </div>
        <p class="text-center py-3 my-0 pe-4">- or -</p>
        <form class="row d-flex g-0">
          <div class="col-8">
            <div class="mb-3">
              <label name="email">E-mail</label><br />
              <input type="email" class="border-3 rounded-2" />
            </div>
            <div class="mb-3">
              <label name="password">Password</label><br />
              <input type="password" class="border-3 rounded-2" />
            </div>
          </div>
          <div
            class="col-4 d-flex align-items-center justify-content-center px-4 pt-2"
          >
            <button type="submit" class="btn btn-primary w-100">GO ></button>
          </div>
        </form>
      </div>
      <div
        class="col-6 col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12 px-2"
        id="signup"
      >
        <h2>SIGN UP</h2><br />
        <form class="row d-flex g-0 pt-2">
          <div class="col-8">
            <div class="mb-2">
              <label name="fname">First name</label>
              <input type="fname" class="border-3 rounded-2" />
            </div>
            <div class="mb-2">
              <label name="lname">Last name</label>
              <input type="lname" class="border-3 rounded-2" />
            </div>
            <div class="mb-2">
              <label name="phone">Phone</label>
              <input type="phone" class="border-3 rounded-2" />
            </div>
            <div class="mb-2">
              <label name="email">E-mail</label>
              <input type="email" class="border-3 rounded-2" />
            </div>
            <div class="mb-2">
              <label name="password">Password</label>
              <input type="password" class="border-3 rounded-2" />
            </div>
          </div>
          <div
            class="col-4 d-flex align-items-end justify-content-center px-4 pt-2 pb-2"
          >
            <button type="submit" class="btn btn-info w-100">GO ></button>
          </div>
        </form>
      </div>
    </div>
    <div class="py-4 px-4 text-end">
      <a href="/loginbiz" class="text-decoration-none"><span
          id="to-business-login"
        >Business user ></span></a>
    </div>
  </div>
</section>