<section
  id="rest-page"
  class="d-flex align-items-center justify-content-center"
>
  <div
    id="rest-login-signup"
    class="my-5 border-0 rounded-2 position-relative container"
  >
    <div id="rest-logo">
      <h1 id="rest-title" class="text-center">PANDAROO BIZ!</h1>
    </div>
    <div class="row d-flex align-items-start px-2">
      <div class="col-6 px-3 col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h2>LOG IN</h2><br />
        <form
          id="rest-login-form"
          method="POST"
          action="/bizlogin"
          class="row d-flex g-0 pt-2"
        >
          <div class="col-8">
            <div class="mb-2">
              <label name="username">Username</label>
              <input type="text" name="username" maxlength="15" class="border-3 rounded-2" />
            </div>
            <div class="mb-2">
              <label name="password">Password</label>
              <input
                type="password"
                name="password"
                class="border-3 rounded-2"
              />
            </div>
          </div>
          <div
            class="col-4 d-flex align-items-end justify-content-center px-4 pt-2 pb-2"
          >
            <button type="submit" class="btn btn-danger w-100">GO ></button>
          </div>
        </form>
      </div>

      <div class="col-6 col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12 px-2">
        <h2>SIGN UP</h2><br />
        <form
          id="rest-signup-form"
          method="POST"
          action="/bizsignup"
          class="row d-flex g-0 pt-2"
        >
          <div class="col-8">
            <div class="mb-2">
              <label name="username">Username</label>
              <input type="text" name="username" maxlength="15" class="border-3 rounded-2" />
            </div>
            <div class="mb-2">
              <label name="password">Password</label>
              <input
                type="password"
                name="password"
                class="border-3 rounded-2"
              />
            </div>
          </div>
          <div
            class="col-4 d-flex align-items-end justify-content-center px-4 pt-2 pb-2"
          >
            <button type="submit" class="btn btn-success w-100">GO ></button>
          </div>
        </form>
      </div>
    </div>
    <div id="validation-msg" class="mx-3"></div>
    <div class="py-4 px-4 text-end">
      <a href="/bizlogin" class="text-decoration-none"><span
          id="to-user-login"
        >Non-business user ></span></a>
    </div>
  </div>
</section>