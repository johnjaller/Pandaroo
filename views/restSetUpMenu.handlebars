{{! Restaurant set menu }}
<div class="container">
  <div class="row d-flex align-items-center">
    <div class="col-12">
      <h2 class="restSetMenuTitle mx-5 my-3">Set your menu</h2>
    </div>
  </div>
</div>

{{! Restaurant set menu form }}
<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="card restSetMenuForm" style="width: 20rem;">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <p class="addMenu">Add new menu</p>
            </div>
          </div>
          <form id="restSetMenu" action="/" method="POST">
            <div class="bg-white">
              <img id="photo" src="#" alt="" />
            </div>
            <br />
            <div class="mb-3">
              <label for="dish" class="form-label">Please choose your dish photo</label>
              <input
                class="form-control"
                type="file"
                id="dish"
                onchange="readURL(this)"
                style="width: 290px;"
              />
            </div>
            <div class="mt-3">Dish name<br /><input
                type="text"
                id="dishName"
                name="dishName"
                style="width: 290px;"
              /></div>
            <div class="mt-3">Price<br /><input
                type="number"
                id="price"
                name="price"
                style="width: 200px;"
              /></div>
            <div class="mt-3">Category<br />
              <select
                id="dishCategory"
                class="form-select"
                style="width: 200px;"
              >
                <option selected></option>
                <option value="1">Soup n Salad</option>
                <option value="2">Starter</option>
                <option value="3">Main</option>
                <option value="3">Dessert</option>
                <option value="3">Drinks</option>
                <option value="3">Others</option>
              </select>
            </div>
            <button type="submit" class="mt-3 float-end rounded btn-restAdd">Add
              ></button>
          </form>
        </div>
      </div>
    </div>

    <div class="restMenu col-9">
      <div class="d-flex justify-content-between">
        <h4>Menu</h4>
        <a href="/info"><button
            type="submit"
            class="mb-2 border-0 rounded btn-restSubmit"
          >Submit ></button></a>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr class="text-center">
            <th><a href="#" class="text-decoration-none">Soup n Salad</a></th>
            <th><a href="#" class="text-decoration-none">Starter</a></th>
            <th><a href="#" class="text-decoration-none">Main</a></th>
            <th><a href="#" class="text-decoration-none">Dessert</a></th>
            <th><a href="#" class="text-decoration-none">Drinks</a></th>
            <th><a href="#" class="text-decoration-none">Others</a></th>
          </tr>
        </thead>
      </table>

      <div class="d-flex flex-wrap justify-content-start">
        {{! #each dishes }}
        <div class="card me-3 rest-dishes" style="width: 19rem;">
          <img
            src="/assets/panna-cotta.png"
            class="card-img-top mx-auto"
            alt="dishes pic"
          />
          <div class="card-body">
            <p class="card-text">Apple pie</p>
            <p class="card-text">HKD 12.50</p>
          </div>
        </div>
        {{! /each dishes }}
      </div>
    </div>

  </div>
</div>

