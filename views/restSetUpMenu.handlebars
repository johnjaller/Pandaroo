{{! Restaurant set menu }}
<div class="container">
  <div class="row d-flex align-items-center">
    <div class="col-12">
      <h2 class="restSetMenuTitle mx-5 my-3">Set your menu</h2>
    </div>
  </div>
</div>

{{! Restaurant set menu form }}
<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="card restSetMenuForm" style="width: 20rem;">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <p class="addMenu">Add new menu</p>
            </div>
          </div>
          <form
            id="restSetMenu"
            action="/bizaddmenu"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="bg-white">
              <img id="photo" src="#" alt="" />
            </div>
            <br />
            <div class="mb-3">
              <label for="dish" class="form-label">Please choose your dish photo</label>
              <input
                class="form-control"
                type="file"
                name="uploadedPhoto"
                id="dish"
                onchange="readURL(this)"
                style="width: 290px;"
                required
              />
            </div>
            <div class="mt-3">Dish name<br /><input
                type="text"
                id="dishName"
                name="restMenuItem"
                style="width: 290px;"
                required
              /></div>
            <div class="mt-3">Price (HKD)<br /><input
                type="number"
                id="price"
                name="restMenuPrice"
                min="1"
                style="width: 200px;"
                required
              /></div>
            <div class="mt-3">Category<br />
              <select
                id="dishCategory"
                name="restMenuCategory"
                class="form-select"
                style="width: 200px;"
                required
              >
                <option selected></option>
                <option value="soup&salad">Soup n Salad</option>
                <option value="starter">Starter</option>
                <option value="main">Main</option>
                <option value="desserts">Dessert</option>
                <option value="drinks">Drinks</option>
                <option value="others">Others</option>
              </select>
              <div class="v-msg"></div>
            </div>
            <button
              type="submit"
              class="mt-3 float-end rounded btn-restAdd"
              id="submitDish"
            >Add></button>
          </form>
        </div>
      </div>
    </div>

    <div class="restMenu col-9">
      <h4>Menu</h4>
      <table class="table table-bordered">
        <thead>
          <tr class="text-center">
            <th><a
                href="/biz/bizsetupmenu/soup&salad"
                class="text-decoration-none"
              >Soup n Salad</a></th>
            <th><a
                href="/biz/bizsetupmenu/starter"
                class="text-decoration-none"
              >Starter</a></th>
            <th><a
                href="/biz/bizsetupmenu/main"
                class="text-decoration-none"
              >Main</a></th>
            <th><a
                href="/biz/bizsetupmenu/desserts"
                class="text-decoration-none"
              >Dessert</a></th>
            <th><a
                href="/biz/bizsetupmenu/drinks"
                class="text-decoration-none"
              >Drinks</a></th>
            <th><a
                href="/biz/bizsetupmenu/others"
                class="text-decoration-none"
              >Others</a></th>
          </tr>
        </thead>
      </table>

      <div class="d-flex flex-wrap justify-content-start">
        {{#each dishInfo}}
          <div class="card me-3 rest-dishes" style="width: 19rem;">
            <img
              src="/image/{{this.photo_path}}"
              class="card-img-top mx-auto"
              alt="dishes pic"
            />
            <div class="card-body">
              <p class="card-text">{{this.item}}</p>
              <p class="card-text">HKD{{this.price}}</p>
            </div>
            <div class="d-flex justify-content-around">
              <div>
              <a href="/biz/info"><button
                  type="submit"
                  class="mb-2 border-0 rounded btn-restSubmit"
                >Edit</button></a>
                </div>
                <div>
              <a href="/biz/info"><button
                  type="submit"
                  class="mb-2 border-0 rounded btn-restSubmit"
                >Delete</button></a>
                </div>
          </div>
        {{/each}}
      </div>
    </div>

  </div>
</div>